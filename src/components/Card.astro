---
const { company } = Astro.props;
import ReadCases from "../components/ReadCases.astro";
---

<article>
  <h2>{company.companyname}</h2>
  <img src=`https://qeoxxkgbtrpnlhjhgkqx.supabase.co/storage/v1/object/public/imgcases/${company.image}` alt="case image" />
  <p>{company.description}</p>
  <ul>
    {company.buycategory.map(cat => {
      return <li>{cat}</li>
    })}
  </ul>
 
  <ReadCases />
</article>
<style>
  img {
    width: 28rem;
   display: flex;
   text-align: center;
  }


  h2 {text-align: center;}

</style>  